# Environment Configuration
# Copy this file to .env and adjust values as needed

# Application settings
APP_NAME=DuckDB Query API
APP_VERSION=1.0.0
DEBUG=false
API_HOST=0.0.0.0
API_PORT=8000

# DuckDB settings
# DUCKDB_PATH=./duckdb.db      # Leave empty for in-memory database (read-only not supported for in-memory)
DUCKDB_READ_ONLY=true          # Only applies when DUCKDB_PATH is set (ignored for in-memory)
DUCKDB_THREADS=4
DUCKDB_MEMORY_LIMIT=1GB
DUCKDB_AZURE_SSL_VERIFY=false

# Azure extension performance tuning for remote queries
AZURE_READ_TRANSFER_CONCURRENCY=10
AZURE_READ_TRANSFER_CHUNK_SIZE=4194304
AZURE_READ_BUFFER_SIZE=16777216
AZURE_HTTP_STATS=true

# Query execution settings
MAX_QUERY_TIMEOUT_SECONDS=30
MAX_RESULT_ROWS=10000

# Logging
LOG_LEVEL=INFO
# Microsoft Fabric Settings (Optional)
FABRIC_AUTH_METHOD=browser           # auto (default), cli, browser, or default

# Fabric Names (friendly names) - for OneLake ABFSS paths
FABRIC_WORKSPACE_NAME=your_workspace_name
FABRIC_LAKEHOUSE_NAME=your_lakehouse_name

# Tables to register (comma-separated)
FABRIC_TABLES=customers,products,sales_transactions,web_analytics


# Azure Service Principal (Optional - for production)
# AZURE_TENANT_ID=
# AZURE_CLIENT_ID=
# AZURE_CLIENT_SECRET=
